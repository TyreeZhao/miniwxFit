@import "../shops/index.wxss";
@import "../courses/index.wxss";
@import "../bookView/index.wxss";
@import "../userCard/index.wxss";

page{
  background-color:#2F2F2F;
  height: 100%;
}

.body {
  height: 100%;
}
.show{
  height: 100%;
  display:flex;
  text-align:center;
  line-height:200rpx;
  margin: auto;
}

.hidden{
  height: 100%;
  display:none;
  text-align:center;
  line-height:200px;
}

.RegionNav {
  display: flex;
  border-bottom: 0.5px solid #767676;
  height:120rpx;  
  width:100%;
}

.nav{
  position: absolute;
  bottom: 0;
  width:100%;
  height:120rpx;
  display:flex;
  flex-direction:row;
}
.default{
  line-height:100rpx;
  text-align:center;
  flex:1;
  color:#565656;
  font-weight:bold;
  font-size:28rpx;
  background-color: #151515;
}
.red{
  line-height:100rpx;
  text-align:center;
  color:#F8DD4A;
  flex:1;
  font-weight:bold;
  background-color: #1A1A1A;
  font-size:28rpx;
}

.mask {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 3;
  background-color:rgba(84, 84, 84, 0.8);
}

.cityList {
  height: 50%;
  background-color: #E8E8E8;
}
